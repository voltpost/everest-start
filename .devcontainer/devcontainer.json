// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "everest-dev",
	//"image": "ghcr.io/voltpost/everest-devcontainer:latest",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postStartCommand": "sudo npm install -g --unsafe-perm node-red && sudo npm install -g node-red-dashboard node-red-contrib-ui-actions node-red-node-ui-table node-red-contrib-ui-level node-red-contrib-cobs node-red-contrib-protobuf node-red-node-serialport",
	"postAttachCommand": "node-red",
	"customizations": {
		"vscode": {
			"extensions": [
				"DavidAnson.vscode-markdownlint",
				"eamodio.gitlens",
				"josetr.cmake-language-support-vscode",
				"llvm-vs-code-extensions.vscode-clangd",
				"ms-azuretools.vscode-docker",
				"ms-dotnettools.vscode-dotnet-runtime",
				"ms-vscode.cmake-tools",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.cpptools-themes",
				"ms-vscode.cpptools",
				"pbkit.vscode-pbkit",
				"twxs.cmake"
			],
			"settings": {
				"clangd.arguments": [
					"--compile-commands-dir=${workspaceFolder}/build"
				]
			}
		}
	},
	"mounts": [],
	"runArgs": [
		"--network=infranet_network"
	],
	"containerEnv": {
		"MQTT_SERVER_ADDRESS": "mqtt-server",
		"MQTT_SERVER_PORT": "1883"
	}
}
